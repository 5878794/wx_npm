


<view style="padding:0 20rpx;">
    <b-input class="b_input" icon="../../images/5@1x.png" type="text" placeholder="电话号码"  name="电话" id="name" value="{{input.name}}" bindmychange="inputMyChange"></b-input>
    <b-input class="b_input" icon="../../images/5@1x.png" type="password" placeholder="电话号码" name="密码" id="password" value="{{input.password}}" bindmychange="inputMyChange"></b-input>
    <b-input class="b_input" icon="../../images/5@1x.png" type="number" placeholder="电话号码" name="数字" id="number" value="{{input.number}}" bindmychange="inputMyChange"></b-input>
    <b-input class="b_input" icon="../../images/5@1x.png" type="idcard" placeholder="电话号码" name="身份证" id="idcard" value="{{input.idcard}}" bindmychange="inputMyChange"></b-input>
    <b-input class="b_input" icon="../../images/5@1x.png" type="digit" placeholder="电话号码" name="小数" id="digit" value="{{input.digit}}" bindmychange="inputMyChange"></b-input>
    <b-input class="b_input" icon="../../images/5@1x.png" type="textarea" placeholder="电话号码" name="文本框" id="textarea" value="{{input.textarea}}" bindmychange="inputMyChange"></b-input>
    <b-select class="b_input" icon="../../images/5@1x.png" type="select" placeholder="电话号码" selectData="{{selectData}}" name="单选" id="select" value="{{input.select}}" bindmychange="inputMyChange"></b-select>

</view>