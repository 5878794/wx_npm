.diandian{
    text-overflow:ellipsis;
    white-space:nowrap;
    overflow:hidden;
}

/*只支持webkit diandian2 diandian3*/
.diandian2{
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.diandian3{
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}

.breakall{
    word-wrap:break-word;
    word-break:break-all;
}

.notbreak{
    white-space:nowrap;
}

.hidden{
    display: none !important;
}

