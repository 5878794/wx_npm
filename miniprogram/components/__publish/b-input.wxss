    display: flex;
    flex-direction:column;
    align-items:flex-end;
    justify-content:flex-start;
}
/*纵向排列 右中*/
.box_src{
    display: flex;
    flex-direction:column;
    align-items:flex-end;
    justify-content:center;
}
/*纵向排列 右下*/
.box_srb{
    display: flex;
    flex-direction:column;
    align-items:flex-end;
    justify-content:flex-end;
}

/*横向排列 左上*/
.box_hlt{
    display: flex;
    flex-direction:row;
    align-items:flex-start;
    justify-content:flex-start;
}
/*横向排列 左中*/
.box_hlc{
    display: flex;
    flex-direction:row;
    align-items:center;
    justify-content:flex-start;
}
/*横向排列 左下*/
.box_hlb{
    display: flex;
    flex-direction:row;
    align-items:flex-end;
    justify-content:flex-start;
}
/*横向排列 中上*/
.box_hct{
    display: flex;
    flex-direction:row;
    align-items:flex-start;
    justify-content:center;
}
/*横向排列 中中*/
.box_hcc{
    display: flex;
    flex-direction:row;
    align-items:center;
    justify-content:center;
}
/*横向排列 中下*/
.box_hcb{
    display: flex;
    flex-direction:row;
    align-items:flex-end;
    justify-content:center;
}
/*横向排列 右上*/
.box_hrt{
    display: flex;
    flex-direction:row;
    align-items:flex-start;
    justify-content:flex-end;
}
/*横向排列 右中*/
.box_hrc{
    display: flex;
    flex-direction:row;
    align-items:center;
    justify-content:flex-end;
}
